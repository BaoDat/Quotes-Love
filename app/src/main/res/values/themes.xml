<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_color_pink</item>
        <item name="colorPrimaryDark">@color/app_color_pink</item>
        <item name="colorAccent">@color/app_color_pink</item>
        <item name="colorControlHighlight">@color/app_color_pink</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="TextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ThemeOverlay.Pokemon.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Widget.CountDown.Toolbar.Solid" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/app_color_pink</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>